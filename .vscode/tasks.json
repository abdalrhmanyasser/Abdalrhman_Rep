{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Sketch",
            "type": "shell",
            "group": "build",
            "command": "${config:processing.path}",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "args": [
                "--force",
                "--sketch=${workspaceRoot}",
                "--output=${workspaceRoot}/out",
                "--run"
            ],
            "windows": {
                "args": [
                    "--force",
                    {
                        "value": "--sketch=${workspaceRoot}",
                        "quoting": "strong"
                    },
                    {
                        "value": "--output=${workspaceRoot}\\out",
                        "quoting": "strong"
                    },
                    "--run"
                ]
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}